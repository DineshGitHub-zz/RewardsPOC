@using RewardsPOC.Models
@using RewardsPOC.Entity

<link rel="stylesheet" href="~/css/style.css" />

@{
    ViewData["Title"] = "Rewards";
}

@{
    RewardsViewModel rewardsViewModel = new RewardsViewModel();
    List<Rewards> rewards = new List<Rewards>();
    if (Model != null)
    {
        rewardsViewModel = Model;
        rewards = rewardsViewModel.Rewards;
    }
    int UserPoints = rewardsViewModel.RewardPoints;
}

<!-- shop section -->

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Latest Products
            </h2>
        </div>
        <div class="heading_container">
            <h2>
                Your Reward Points : @UserPoints
            </h2>
        </div>
        <div class="row">
            @foreach (var item in rewards)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="box">
                        <a href="">
                            <div class="img-box">
                                <img src="@item.filePath" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @item.Name
                                </h6>
                                <h6>
                                    Points
                                    <span>
                                        @item.Points
                                    </span>
                                </h6>
                            </div>
                            <div class="new">
                                <span>
                                    Buy
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
            }

        </div>
        <div class="btn-box">
            <a href="">
                View All Products
            </a>
        </div>
    </div>
</section>

<!-- end shop section -->
